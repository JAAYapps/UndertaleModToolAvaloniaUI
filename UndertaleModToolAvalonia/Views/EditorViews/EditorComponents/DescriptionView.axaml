<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:UndertaleModToolAvalonia.ViewModels.EditorViewModels.EditorComponents"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UndertaleModToolAvalonia.Views.EditorViews.EditorComponents.DescriptionView"
			 x:DataType="vm:DescriptionViewModel">
	<StackPanel>
		<TextBlock Text="{Binding Heading, Mode=OneWay}" FontWeight="Bold"/>
		<Separator/>
		<TextBlock Text="{Binding Description, Mode=OneWay}"/>
	</StackPanel>
</UserControl>
