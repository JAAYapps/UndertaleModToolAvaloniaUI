<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:UndertaleModToolAvalonia.ViewModels.EditorViewModels.EditorComponents"
			 xmlns:controls="using:UndertaleModToolAvalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UndertaleModToolAvalonia.Views.EditorViews.EditorComponents.UndertaleVariableChunkEditorView"
			 x:DataType="vm:UndertaleVariableChunkEditorViewModel">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Variables" FontWeight="Bold"/>
		<Separator Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

		<TextBlock Grid.Row="2" Grid.Column="0" Margin="3">Instance/global variable count</TextBlock>
		<TextBox Grid.Row="2" Grid.Column="1" Margin="3" Text="{Binding UndertaleChunkVARI.InstanceVarCount}"/>

		<TextBlock Grid.Row="3" Grid.Column="0" Margin="3">Instance/global variable count (again)</TextBlock>
		<TextBox Grid.Row="3" Grid.Column="1" Margin="3" Text="{Binding UndertaleChunkVARI.InstanceVarCountAgain}"/>

		<TextBlock Grid.Row="4" Grid.Column="0" Margin="3">Max local variable count</TextBlock>
		<TextBox Grid.Row="4" Grid.Column="1" Margin="3" Text="{Binding UndertaleChunkVARI.MaxLocalVarCount}"/>
	</Grid>
</UserControl>
